<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>N'importe Quoi</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background-color: #f4f4f4;
            overflow: hidden;
        }
        #text {
            font-size: 3rem;
            font-weight: bold;
            color: #333;
            text-align: center;
        }
        .mirror {
            transform: scaleX(-1);
        }
        @keyframes jump {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-30px); }
        }
        .jump {
            display: inline-block;
            animation: jump 0.5s ease infinite;
        }
    </style>
</head>
<body>
    <div id="text">N'importe Quoi</div>

    <script>
        const textElement = document.getElementById('text');

        function showMirrorText() {
            textElement.classList.add('mirror');
        }

        function playLeapFrog() {
            const text = "N'importe Quoi";
            textElement.innerHTML = ''; // Vide le texte
            [...text].forEach((char, index) => {
                const span = document.createElement('span');
                span.textContent = char;
                span.style.display = 'inline-block';
                span.style.animationDelay = `${index * 0.1}s`; // Décalage pour chaque lettre
                span.classList.add('jump');
                textElement.appendChild(span);
            });
        }

        // Afficher le texte en miroir après 2 secondes
        setTimeout(showMirrorText, 2000);

        // Lancer l'animation "saute-mouton" après 4 secondes
        setTimeout(playLeapFrog, 4000);
    </script>
</body>
</html>
